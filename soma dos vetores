#include<stdio.h>
#include<stdlib.h>

/*Crie e inicialize um vetor de inteiros de tamanho 8. Faça a
soma dos seus elementos, e apresente o resultado.*/

int main(){

    //vetor
    int vetor [8];
    int soma = 0;
    
    //RECEBER VALORES DOS VETORES
    for (int i = 0; i < 8; i++)
    {
        printf("digite o valor do vetor %i: ",i);
        scanf("%i",&vetor[i]);
    }//for

    
    for (int b = 0; b < 8 ; b++)
    {
        soma = soma + vetor[b];
    }
    

    
    
    printf("a soma dos vetores é %i",soma);



    return 0;
}//main
